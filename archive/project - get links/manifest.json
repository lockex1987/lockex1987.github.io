{
    "manifest_version": 2,
    "name": "Get links",
    "version": "1.0.0",
    "description": "Get links to download",
    "author": "lockex1987",
    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.nettruyen.com/*"
            ],
            "js": [
                "js/utils.js",
                "js/album/nettruyen.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": {
            "24": "images/icon-24.png",
            "32": "images/icon-32.png",
            "64": "images/icon-64.png"
        },
        "default_title" : "Get links",
        "default_popup" : "popup.html"
    },
    "permissions" : [
        "activeTab",
        "tabs"
    ]
}
